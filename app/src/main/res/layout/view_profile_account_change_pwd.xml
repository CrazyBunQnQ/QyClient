<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >
  <EditText
      android:id="@+id/etOriginPassword"
      android:drawableLeft="@drawable/ic_lock_outline_grey_500_24dp"
      android:drawableStart="@drawable/ic_lock_outline_grey_500_24dp"
      android:hint="原始密码"
      android:inputType="textPassword"
      style="@style/editTextStyle"
      />
  <EditText
      android:id="@+id/etNewPassword"
      android:drawableLeft="@drawable/ic_lock_outline_grey_500_24dp"
      android:drawableStart="@drawable/ic_lock_outline_grey_500_24dp"
      android:hint="新密码"
      android:inputType="textPassword"
      style="@style/editTextStyle"
      />
  <EditText
      android:id="@+id/etNewPasswordConfirmed"
      android:drawableLeft="@drawable/ic_lock_outline_grey_500_24dp"
      android:drawableStart="@drawable/ic_lock_outline_grey_500_24dp"
      android:hint="重新输入新密码"
      android:inputType="textPassword"
      style="@style/editTextStyle"
      />
  <Button
      android:id="@+id/btn_submit_mdfPwd"
      android:text="修改"
      style="@style/buttonStyle"
      />
</LinearLayout>