<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_activites_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".functions.main.activity.detail.ActyDetaiActivity"
    >


  <android.support.v7.widget.Toolbar
      android:id="@+id/back"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/colorPrimary"
      >
    <ImageView
        android:id="@+id/activities_back"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_arrow_back_white_24dp"
        />
  </android.support.v7.widget.Toolbar>

  <android.support.design.widget.TabLayout
      android:id="@+id/activities_tab"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tabIndicatorColor="@color/colorPrimary"
      tabSelectedTextColor="@color/colorPrimary"
      tabTextColor="@color/cardview_light_background"
      >

  </android.support.design.widget.TabLayout>

  <com.i7676.qyclient.widgets.MyViewPager
      android:id="@+id/activites_viewpager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:isScrollContainer="true"
      >

  </com.i7676.qyclient.widgets.MyViewPager>
</LinearLayout>
