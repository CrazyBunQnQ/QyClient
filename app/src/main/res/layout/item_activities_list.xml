  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="98dp"
      android:layout_margin="8dp"
      android:orientation="horizontal"
      android:weightSum="1"
      >
    <com.i7676.qyclient.widgets.AutoLoadImageView
        android:id="@+id/activity_logo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:scaleType="fitXY"
        android:src="@mipmap/placeholder"
        app:ml_radius="8dp"
        app:ml_shape_type="rectangle"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        >
      <TextView
          android:id="@+id/activity_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="六角碎片积分送豪礼"
          android:textColor="@color/colorAccent"
          android:textSize="16sp"
          />
      <View
          android:id="@+id/actvity_fenge"
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_below="@id/activity_title"
          android:background="#BDBDBD"
          />
      <TextView
          android:id="@+id/activity_starttime"
          android:layout_marginTop="10dp"
          android:layout_below="@id/actvity_fenge"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2016-9-03"
          />
      <TextView
          android:id="@+id/activity_endtime"
          android:layout_marginTop="5dp"
          android:layout_below="@id/activity_starttime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2016-9-25"
          />
      <Button
          android:id="@+id/btn_activity_detail"
          android:layout_marginTop="15dp"

          android:layout_below="@id/actvity_fenge"
          android:layout_width="70dp"
          android:layout_height="30dp"
          android:layout_marginLeft="30dp"
          android:text="活动详情"
          android:textColor="@color/colorwhite"
          android:background="@drawable/btn_shape"
          android:layout_toRightOf="@id/activity_starttime"
          />
    </RelativeLayout>

  </LinearLayout>
