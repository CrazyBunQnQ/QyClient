<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolbarLayout"
    android:layout_margin="16dp"
    android:background="@android:color/background_light"
    >

  <EditText
      android:id="@+id/et_phoneNum"
      android:drawableLeft="@drawable/ic_phone_android_grey_500_24dp"
      android:drawableStart="@drawable/ic_phone_android_grey_500_24dp"
      android:hint="请输入手机号"
      style="@style/editTextStyle"
      />

  <Button
      android:id="@+id/btn_get_vCode"
      android:layout_width="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@id/et_phoneNum"
      android:layout_marginLeft="24dp"
      android:layout_marginStart="24dp"
      android:layout_marginTop="16dp"
      android:text="获取验证码"
      style="@style/buttonStyle"
      />

  <EditText
      android:id="@+id/et_vCode"
      android:layout_below="@id/et_phoneNum"
      android:layout_toLeftOf="@id/btn_get_vCode"
      android:drawableLeft="@drawable/ic_lock_outline_grey_500_24dp"
      android:drawableStart="@drawable/ic_lock_outline_grey_500_24dp"
      android:hint="请输入验证码"
      style="@style/editTextStyle"
      />

  <Button
      android:id="@+id/btn_submit"
      android:layout_below="@id/et_vCode"
      android:text="立 即 绑 定"
      style="@style/buttonStyle"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
</RelativeLayout>